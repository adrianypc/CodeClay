<?xml version="1.0" encoding="utf-8" ?>
<CiTable>
	<TableName>CiApplicationDetails</TableName>
	<TableCaption lang="sql">select 'Application Design: ' + AppName from Application where AppID = @AppID</TableCaption>
	<DefaultView>Card</DefaultView>
  <RowKey>AppID</RowKey>
  <CiTextField>
    <FieldName>AppID</FieldName>
    <Caption>Application ID</Caption>
    <Editable>false</Editable>
  </CiTextField>
  <CiTextField>
    <FieldName>AppName</FieldName>
    <Caption>Application Name</Caption>
    <Editable>false</Editable>
  </CiTextField>
  <CiCheckField>
    <FieldName>UserDefined</FieldName>
    <Caption>User Defined?</Caption>
    <Width>10</Width>
  </CiCheckField>
  <CiComboField>
    <FieldName>HomePluginSrc</FieldName>
    <Caption>Home Table</Caption>
    <DropdownSQL>select TableName + '.pux' as PuxFile from CiTable where AppID = @AppID order by TableName</DropdownSQL>
  </CiComboField>
  <CiLinkField>
    <FieldName>AppUrl</FieldName>
    <Caption>Url</Caption>
    <Editable>false</Editable>
  </CiLinkField>
  <CiTable Src="ApplicationUserList.pux" />
  <CiTable Src="CiTableList.pux" />
  <SelectMacro>
    <ActionSQL>?exec spApplication_sel @AppID, @CI_UserEmail</ActionSQL>
  </SelectMacro>
  <UpdateMacro>
    <ActionSQL>exec spApplication_upd @AppID, @AppName, @UserDefined, @HomePluginSrc</ActionSQL>
    <ActionSQL>select @AppID as AppID, @OldAppName as OldAppName</ActionSQL>
    <CiSerializeMacro>
      <Direction>Download</Direction>
    </CiSerializeMacro>
  </UpdateMacro>
</CiTable>
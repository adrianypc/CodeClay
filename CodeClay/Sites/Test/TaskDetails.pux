<?xml version="1.0" encoding="utf-8" ?>
<CiTable Src="CurrentTasks.pux">
  <TableName>Task Details</TableName>
  <DefaultView>Card</DefaultView>
  <ColCount>2</ColCount>
  <SelectMacro>
    <ActionSQL>
      select  TaskCode,
      TaskDescription,
      TaskType,
      C.CustomerCode,
      C.Customer,
      Category,
      PrimaryDeveloper,
      HoursSold,
      FixedPrice,
      HoursBought,
      TaskStatus,
      CompletedDate,
      InvoiceNumber,
      T.Billable,
      BuyPrice,
      SellPrice
      from    tblTasks T,
      tblCustomers C
      where   TaskCode = @TaskCode
      and     C.CustomerCode = T.CustomerCode
      order by TaskCode
    </ActionSQL>
  </SelectMacro>
</CiTable>
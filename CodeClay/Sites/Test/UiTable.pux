<?xml version="1.0" encoding="utf-8" ?>
<CiTable>
  <TableName>Task Search</TableName>
  <DefaultView>Card</DefaultView>
  <CiComboField>
    <FieldName>TaskType</FieldName>
    <Caption>Task Type</Caption>
    <DropdownSQL>
      select  Description as [Task Type]
      from    tblDropdown
      where   Type = 'TaskType'
      order by Description
    </DropdownSQL>
  </CiComboField>
  <CiComboField>
    <FieldName>CustomerCode</FieldName>
    <Caption>Customer</Caption>
    <DropdownSQL>
      select  CustomerCode as Code,
              Customer
      from    tblCustomers
      order by CustomerCode
    </DropdownSQL>
  </CiComboField>
  <CiComboField>
    <FieldName>PrimaryDeveloper</FieldName>
    <Caption>Staff</Caption>
    <DropdownSQL>
      select  StaffCode as Staff
      from    tblStaff
      order by StaffCode
    </DropdownSQL>
  </CiComboField>
</CiTable>